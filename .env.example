# Database
DATABASE_URL="file:./dev.db"

# Application
NEXT_PUBLIC_APP_URL="https://localhost:3003"

# Xero OAuth (Replace with your own credentials)
XERO_CLIENT_ID="your_xero_client_id"
XERO_CLIENT_SECRET="your_xero_client_secret"
XERO_REDIRECT_URI="https://localhost:3003/api/v1/xero/auth/callback"

# Xero MCP Server Integration (Optional)
# Set to true to enable MCP-based Xero integration
XERO_MCP_ENABLED="false"
# Bearer token for direct MCP authentication
XERO_CLIENT_BEARER_TOKEN=""

# Redis Configuration (for rate limiting)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# Cron Job Secret (for scheduled reconciliation)
CRON_SECRET="your_cron_secret_here"

# Encryption key for storing sensitive data (generate with: openssl rand -base64 32)
ENCRYPTION_KEY=""