interface ApiWrapperOptions {
  authLevel?: ValidationLevel;
  endpoint: string;
  requireXero?: boolean;
  bodySchema?: any;
  rateLimit?: {
    windowMs: number;
    max: number;
  };
}

type ApiHandler<T = any> = (
