      const cash = bankAccounts.reduce((sum, acc) => sum + acc.balance.toNumber(), 0);

      // Get accounts receivable (open invoices)
      const receivables = await prisma.syncedInvoice.aggregate({
        where: {
          type: 'ACCREC',
          status: 'OPEN',
        },
        _sum: {
          amountDue: true,
        },
