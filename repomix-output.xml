    });
    
    console.log(`Updating ${recentTransactions.length} recent transactions with Xero account codes`);
    
    // Distribute accounts realistically
    const distribution = [
      { account: xeroAccounts.find(a => a.code === '200'), weight: 15 }, // Sales
